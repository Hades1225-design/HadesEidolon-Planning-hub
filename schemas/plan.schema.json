{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Plan Frontmatter",
  "type": "object",
  "required": [
    "id",
    "title",
    "area",
    "priority",
    "status",
    "owner",
    "created",
    "updated"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "area": {
      "type": "string",
      "enum": [
        "ios",
        "macos",
        "hackintosh",
        "writing",
        "web",
        "infra",
        "life"
      ]
    },
    "priority": {
      "type": "string",
      "enum": [
        "P0",
        "P1",
        "P2"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "inbox",
        "ongoing",
        "done"
      ]
    },
    "owner": {
      "type": "string"
    },
    "progress": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "due": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "created": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  },
  "additionalProperties": false
}